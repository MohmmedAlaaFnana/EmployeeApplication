@model IEnumerable<EmployeeApplication.Models.infoEmployeeSub>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.holidaydate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thenumberofdays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isitvacation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.holidaydate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thenumberofdays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isitvacation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statement)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.aseriesId">Edit</a> |
                <a class="btn btn-danger" asp-action="Details" asp-route-id="@item.aseriesId">Details</a> |
                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.aseriesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
